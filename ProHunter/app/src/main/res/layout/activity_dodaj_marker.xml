<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DodajMarker"
    android:background="#F3F2E8"
    android:orientation="vertical">


    <Spinner
        android:id="@+id/spinerDodajMarker"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginBottom="23dp"
        android:layout_marginEnd="106dp"
        android:layout_marginStart="105dp"
        android:gravity="center_horizontal"
        app:layout_constraintBottom_toTopOf="@+id/slikaDodajMarker"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tipMarkera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="177dp"
        android:layout_marginStart="177dp"
        android:layout_marginTop="29dp"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/spinerDodajMarker"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/slikaDodajMarker"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginBottom="68dp"
        android:layout_marginEnd="106dp"
        android:layout_marginStart="105dp"
        android:src="@drawable/avatar"
        app:layout_constraintBottom_toTopOf="@+id/longitudeDodajMarker"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <EditText
        android:id="@+id/opisDodajMarker"
        android:layout_width="215dp"
        android:layout_height="51dp"
        android:layout_marginBottom="30dp"
        android:layout_marginEnd="315dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="361dp"
        android:text="Opis"
        app:layout_constraintBottom_toTopOf="@+id/longitudeDodajMarker"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.734" />


    <TextView
        android:id="@+id/longitudeDodajMarker"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:layout_marginEnd="52dp"
        android:text="longitude"
        app:layout_constraintBottom_toTopOf="@+id/latitudeDodajMarker"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/latitudeDodajMarker"
        android:layout_width="300dp"
        android:layout_height="wrap_content"

        android:layout_marginBottom="8dp"
        android:layout_marginEnd="52dp"
        android:text="latitude"
        app:layout_constraintBottom_toTopOf="@+id/dodajKoordinate"
        app:layout_constraintEnd_toEndOf="parent" />


    <Button
        android:id="@+id/dodajKoordinate"
        android:layout_width="163dp"
        android:layout_height="wrap_content"

        android:layout_marginBottom="52dp"
        android:layout_marginEnd="26dp"
        android:layout_marginStart="222dp"
        android:text="Dodaj koordinate"
        app:layout_constraintBottom_toTopOf="@+id/dodajMarkerR"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <Button
        android:id="@+id/dodajMarkerR"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_marginBottom="29dp"
        android:layout_marginEnd="131dp"
        android:layout_marginStart="130dp"
        android:background="@drawable/dugme"
        android:shadowDx="0"
        android:shadowDy="5"
        android:text="@string/DodajDogadjaj"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Spinner
        android:id="@+id/spinneZivotinje"
        android:layout_width="200dp"
        android:layout_height="48dp"
        android:layout_marginEnd="192dp"
        android:layout_marginStart="19dp"
        android:layout_marginTop="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinerDodajMarker"
        android:visibility="invisible"/>

</android.support.constraint.ConstraintLayout>